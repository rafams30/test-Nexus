    {{#if consultas.length}}
        <table>
            <thead>
                <tr>
                    <th>Criptomoeda</th>
                    <th>Valor em Real</th>
                    <th>Valor em Dollar</th>
                    <th>Data da Consulta</th>
                </tr>
            </thead>
            <tbody>
                {{#each consultas}}
                <tr>
                    <td>{{this.criptoName}}</td>
                    <td>R$ {{this.valor_BRL}}</td>
